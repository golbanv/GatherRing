<%- include("partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to GatherRing</h1>
      <p>Meet with friends and strangers!</p>
      <p>
        <a class="btn btn-primary btn-large" href="/gatherings/new"
          >Add new Gathering!</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% gatherings.forEach(function(gatherings){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= gatherings.image %>" alt="" />
        <div class="caption">
          <h4><%= gatherings.name %></h4>
        </div>
        <p>
          <a href="/gatherings/<%= gatherings._id%>" class="btn btn-primary "
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
